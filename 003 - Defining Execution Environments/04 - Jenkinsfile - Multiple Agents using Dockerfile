pipeline {
	agent none
	
	stages {
		stage('Example Maven'){
			agent{
				dockerfile{
					filename '04 - Maven_Dockerfile - Multiple Agents using Dockerfile'
					dir '003 - Defining Execution Environments'
				}
				step{
					echo 'Hello Maven'
					sh 'mvn --version'
				}
			}
		}
		stage('Example NPM'){
			agent{
				dockerfile{
					filename '04 - NPM_Dockerfile - Multiple Agents using Dockerfile'
					dir '003 - Defining Execution Environments'
				}
				step{
					echo 'Hello NPM'
					sh 'npm --version'
				}
			}
		}
	}
}
