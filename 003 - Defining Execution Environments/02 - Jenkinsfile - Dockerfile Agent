pipeline {
    agent { 
    	dockerfile {
        filename '02 - Dockerfile - Dockerfile'
        dir '003 - Defining Execution Environments'
//        label 'my-defined-label'
        additionalBuildArgs  '--build-arg "$ENV_VARIABLE" = "Value for build"'
//        args '-v /tmp:/tmp'
    }
	}
    stages {
        stage('build') {
            steps {
                sh 'if [ "$ENV_VARIABLE" != "Value for build" ]; then exit 1; fi'
            }
        }
    }
}
